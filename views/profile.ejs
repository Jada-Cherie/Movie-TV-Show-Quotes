<!doctype html>
<html>
<head>
    <title>TV Show and Movie quotes</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
              <img src="" alt="">
            </div>
            <h3></h3>
        </div>
        <div class="col-sm-6">
          <h3>TV/Movie Characters</h3>
          <ul class="messages">
          <% for(var i=0; i<tvMovies.length; i++) {%>
            <li class="message">
              <span><%= tvMovies[i].name %></span>
              <span><%= tvMovies[i].movieshow %></span>
              <span><%= tvMovies[i].quote %></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Adda a TV/Movie Character and there quote and we will show you an image of that Character</h2>
        <% if (user.local.email) { %>
          <form action="/tvMovieCharacter" method="POST">
            <input type="text" placeholder="name of charaecter" name="name" class="character">
            <input type="text" placeholder="tv show/movie" name="movieshow">
            <input type="text" placeholder="quote" name="quote">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
